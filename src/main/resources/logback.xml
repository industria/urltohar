<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUTSrc" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
<!--      <pattern>%date{ISO8601} %-5level %logger{36} %X{akkaSource} - %msg%n</pattern> -->
      <pattern>%date{ISO8601} %-5level %X{akkaSource} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUTSrc" />
  </root>
</configuration>
